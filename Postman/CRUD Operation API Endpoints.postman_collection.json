				{
					"name": "Create Employee",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Set User ID\", function () {\r",
									"    var jsonData = pm.response.json();\r",
									"    pm.globals.set(\"employee_id_var\", jsonData.id);\r",
									"});\r",
									"\r",
									"pm.test(\"Check if the fields are match to globals\", function () {\r",
									"    var jsonData = pm.response.json();\r",
									"    pm.expect(jsonData.name).to.eql(pm.globals.get(\"name_var\"));\r",
									"    pm.expect(jsonData.surname).to.eql(pm.globals.get(\"surname_var\"));\r",
									"    pm.expect(jsonData.department).to.eql(pm.globals.get(\"department_var\"));\r",
									"    pm.expect(jsonData.salary).to.eql(Number(pm.globals.get(\"salary_var\")));\r",
									"});"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n    \"name\": \"{{name_var}}\",\r\n    \"surname\": \"{{surname_var}}\",\r\n    \"salary\": {{salary_var}},\r\n    \"department\": \"{{department_var}}\"\r\n}\r\n",
							"options": {
								"raw": {
									"language": "json"
								}
